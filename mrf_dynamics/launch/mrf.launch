<launch>

    <env name="ROSCONSOLE_CONFIG_FILE" value="$(find mrf_dynamics)/config/custom_rosconsole.conf"/>
    <include file="$(find multi_uav_simulator)/launch/simu.launch" pass_all_args="true"/>
    
    <arg name="n_robots" default="8"/>
    
    <group ns="robot_1">
        <node name="mrf" pkg="mrf_dynamics" type="mrf_dynamics" output="screen">
            <param name="robot_id" value="1"/>
            <param name="n_robots" value="$(arg n_robots)"/>
        </node>
    </group>

    <group ns="robot_2">
        <node name="mrf" pkg="mrf_dynamics" type="mrf_dynamics" output="screen">
            <param name="robot_id" value="2"/>
            <param name="n_robots" value="$(arg n_robots)"/>
        </node>
    </group>
    
    <group ns="robot_3">
        <node name="mrf" pkg="mrf_dynamics" type="mrf_dynamics" output="screen">
            <param name="robot_id" value="3"/>
            <param name="n_robots" value="$(arg n_robots)"/>
        </node>
    </group>
    
    <group ns="robot_4">
        <node name="mrf" pkg="mrf_dynamics" type="mrf_dynamics" output="screen">
            <param name="robot_id" value="4"/>
            <param name="n_robots" value="$(arg n_robots)"/>
        </node>
    </group>
    
    <group ns="robot_5">
        <node name="mrf" pkg="mrf_dynamics" type="mrf_dynamics" output="screen">
            <param name="robot_id" value="5"/>
            <param name="n_robots" value="$(arg n_robots)"/>
        </node>
    </group>

    <group ns="robot_6">
        <node name="mrf" pkg="mrf_dynamics" type="mrf_dynamics" output="screen">
            <param name="robot_id" value="6"/>
            <param name="n_robots" value="$(arg n_robots)"/>
        </node>
    </group>
    
    <group ns="robot_7">
        <node name="mrf" pkg="mrf_dynamics" type="mrf_dynamics" output="screen">
            <param name="robot_id" value="7"/>
            <param name="n_robots" value="$(arg n_robots)"/>
        </node>
    </group>

    <group ns="robot_8">
        <node name="mrf" pkg="mrf_dynamics" type="mrf_dynamics" output="screen">
            <param name="robot_id" value="8"/>
            <param name="n_robots" value="$(arg n_robots)"/>
        </node>
    </group>

</launch>


